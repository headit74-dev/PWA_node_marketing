<div class="row">
    <div class="col-lg-12">
        <div class="card custom-card">
            <div class="card-body">
                <div>
                    <h6 class="card-title mb-1">Approved Lenders Table</h6>
                    <p class="text-muted card-sub-title">To enable a hover state on table rows.</p>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mg-b-0 text-center">
                        <thead>
                        <tr>
                            <th>NO</th>
                            <th>Name</th>
                            <th>Deal ID</th>
                            <th>Fund Amount</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for (var i = 0; i < lenders.length; i++) { %>
                            <tr>
                                <td style="display: none"><%= lenders[i].id%></td>
                                <td><%= i + 1 %></td>
                                <td><%= lenders[i].lenderName%></td>
                                <td><%= lenders[i].dealId%></td>
                                <td><%= lenders[i].fundAmount%></td>
                                <td>
                                    <button class="btn btn-success btn_approve_lenders">Approve</button>
                                    <button class="btn btn-danger btn_reject_lenders"> Reject </button>
                                </td>
                            </tr>
                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
