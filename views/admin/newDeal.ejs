<div class="row">
    <div class="col-lg-12">
        <div class="card custom-card">
            <div class="card-body">
                <div>
                    <h6 class="card-title mb-1">New Deals Table</h6>
                    <p class="text-muted card-sub-title">To enable a hover state on table rows.</p>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mg-b-0 text-center">
                        <thead>
                        <tr>
                            <th>NO</th>
                            <th>Borrower Name</th>
                            <th>Company Name</th>
                            <th>Deal Type</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for (var i = 0; i < deals.length; i++) { %>
                            <tr>
                                <td style="display: none"><%= deals[i].id%></td>
                                <td><%= i + 1 %></td>
                                <td><%= deals[i].fullLegalName%></td>
                                <td><%= deals[i].companyName%></td>
                                <td><%= deals[i].dealType%></td>
                                <td>
                                    <button class="btn btn-success btn_approve_deals" onclick="approveDeal('<%= deals[i].id%>')">Approve</button>
                                    <button class="btn btn-danger btn_reject_deals" onclick="rejectDeal('<%= deals[i].id%>')"> Reject </button>
                                </td>
                            </tr>
                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

