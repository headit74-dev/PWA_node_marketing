<div id="borrower_title">
    Supplier
</div>
<!-- One -->
<section class="wrapper" style="background-color: #f2f2f2">
    <div class="inner">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6 col-12 text-center" style="margin-bottom: 15px">
                <button class="btn btn-block btn-info">
                    <a href="/supplier"> Corporate Info </a>
                </button>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-12 text-center" style="margin-bottom: 15px">
                <button class="btn btn-block btn-info active">
                    <a href="/supplier/products_services"> Products/Services </a>
                </button>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-12 text-center" style="margin-bottom: 15px">
                <button class="btn btn-block btn-info">
                    <a href="/supplier/open_deals"> Open Deals </a>
                </button>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-12 text-center" style="margin-bottom: 15px">
                <button class="btn btn-block btn-info">
                    <a href="/supplier/my_deals"> My Deals </a>
                </button>
            </div>
        </div>
    </div>
</section>

<section id="one" class="wrapper style2" style="padding-top: 2rem;padding-bottom: 0rem;">
    <div class="inner">
        <div class="grid-style" style="background-color: white">
            <div class="text-center" style="width: 100%; margin: 15px">
                <h2>Register Product/Service</h2>
            </div>
            <form action="/supplier/products_services/register" method="post" id="form_product" style="width: 90%;margin-left: 5%">
                <div class="row">
                    <div class="col-md-6 col-sm-12 col-12">
                        <div class="form-group text-left">
                            <label>Product/Service Description:</label>
                            <input class="form-control" type="text" name="description" required>
                        </div>
                        <div class="form-group text-left">
                            <label>Quantity Control:</label>
                            <input class="form-control" type="text" name="quantityControl" required>
                        </div>
                        <div class="form-group text-left">
                            <label>Expected Payment Terms:</label>
                            <input class="form-control" type="text" name="expectedPaymentTerms" required>
                        </div>
                        <div class="form-group text-left">
                            <label>Quantity able to provide:</label>
                            <input class="form-control" type="text" name="quantityAbleToProvide" required>
                        </div>
                        <div class="form-group text-left">
                            <label>Factory Location:</label>
                            <input class="form-control" type="text" name="factoryLocation" required>
                        </div>
                        <div class="form-group text-left">
                            <label>Incoterm:</label>
                            <input class="form-control" type="text" name="incoterm" required>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12 col-12">
                        <div class="form-group text-left">
                            <label>Measurement Unit:</label>
                            <input class="form-control" type="text" name="measurementUnit" required>
                        </div>
                        <div class="form-group text-left">
                            <label>Required licenses in place:</label>
                            <input class="form-control" type="text" name="licensePlace" required>
                        </div>
                        <div class="form-group text-left">
                            <label>Able to provide by:</label>
                            <input class="form-control" type="text" name="ableToProvideBy" required>
                        </div>
                        <div class="form-group text-left">
                            <label>Expected price per unit:</label>
                            <input class="form-control" type="text" name="EPPU" required>
                        </div>
                        <div class="form-group text-left">
                            <label>Suitability for the deal(%):</label>
                            <input class="form-control" type="number" name="suitability" required>
                        </div>
                        <div class="form-group text-left">
                            <label>Production History:</label>
                            <input class="form-control" type="text" name="history" required>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>


<!-- Two -->
<section id="two" class="wrapper style2" style="padding-top: 0rem;">
    <div class="inner">
        <div class="align-left">
            <div>
                <p style="padding:5px 10px"> I have the authority to sell the product/service on behalf of the company.</p>
            </div>
        </div>
    </div>
</section>

<section class="wrapper">
    <div class="inner">
        <div class="row">
            <div class="col-6 align-right">
                <button class="btn btn-lg btn-success"><a href="/supplier/products_services"> Cancel </a> </button>
            </div>
            <div class="col-6 align-left">
                <button class="btn btn-lg btn-success" id="btn_submit"> Submit</button>
            </div>
        </div>
    </div>
</section>


