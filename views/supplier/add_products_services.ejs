<script>
    $(document).ready(function () {
        // toastr.success('You are logged in as a borrower.');

        $('#article').hide();
        var message = '<%= message %>';
        if (message == 'wait') {
            toastr.error('The new Product/Service will be registered after approving.');
        }
        $('#btn_submit').click(function () {
            $('#form_product').submit();
        });
    })
</script>
