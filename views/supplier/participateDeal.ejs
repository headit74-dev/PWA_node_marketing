<script>
    $(document).ready(function () {

        $('#article').hide();

        $('#btn_product_submit').click(function () {
            var productId = $('#productService').val();
            $.ajax({
                url:'/supplier/participate',
                data: {
                    productId: productId
                },
                type: 'post',
                success: function (data) {
                    alert(data);
                }
            })
        });

    })
</script>
</body>
