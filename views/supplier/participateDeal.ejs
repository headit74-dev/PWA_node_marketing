        .box {
            opacity: 0.85;
            background-color: black;
        }

        .box header h2 {
            color: white !important;
        }

        .box .form-group .form-control {
            background-color: white !important;
            border-radius: 5px;
        }

        .box .form-group label {
            color: white !important;
        }

        .navigate button a {
            font-size: 20px;
            color: white;
        }

        .box ul li {
            color: white !important;
        }
    </style>
