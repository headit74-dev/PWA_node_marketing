<!--<script src="./js/share.js"></script>-->
<!--<script src="./js/menu.js"></script>-->
<script>
    $(document).ready(function () {
        // toastr.success('You are logged in as a supplier.');

        $('#article').hide();

        $("#product_table tbody tr").click(function () {
            let name = $(this).children('td:nth-child(2)').text();
            let location = $(this).children('td:nth-child(3)').text();
            var string = encodeURIComponent(name);
            // alert(name);
            window.location.replace("/supplier/products_services/details?name=" + string);
        });
    });
</script>
</body>
</html>
