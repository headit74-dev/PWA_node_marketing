<!DOCTYPE HTML>
<html>
<head>
    <title>Borrower General</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="stylesheet" href="/assets/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/main.css"/>
    <link rel="stylesheet" href="/assets/plugins/toastr/toastr.min.css">
</head>
<body style="background-color: #f2f2f2">

<!-- Header -->
<header id="header" class="alt">
    <div class="logo"><a href="/supplier"><span>Supplier</span></a></div>
    <a href="#menu" id="menu_link"><span id="span_menu">Menu</span></a>
</header>

<!-- Nav -->
<nav id="menu">
    <ul class="links">
        <li><a href="index.html">Home</a></li>
        <li><a href="generic.html">Generics</a></li>
        <li><a href="elements.html">Elements</a></li>
    </ul>
</nav>

<!-- Banner -->
<section class="banner" style="min-height: 50px;height: 50px;padding: 3.2em 0;">
    <article id="article">
        <img src="/images/slide01.jpg" alt=""/>
        <div class="inner">
            <header>
                <p>A free responsive web site template by <a href="https://templated.co">TEMPLATED</a></p>
                <h2>Hielo</h2>
            </header>
        </div>
    </article>
</section>

<div id="borrower_title">
    Supplier
</div>
<!-- One -->
<section class="wrapper" style="background-color: #f2f2f2">
    <div class="inner">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6 col-12 text-center" style="margin-bottom: 15px">
                <button class="btn btn-block btn-info">
                    <a href="/supplier"> Corporate Info </a>
                </button>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-12 text-center" style="margin-bottom: 15px">
                <button class="btn btn-block btn-info active">
                    <a href="/supplier/products_services"> Products/Services </a>
                </button>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-12 text-center" style="margin-bottom: 15px">
                <button class="btn btn-block btn-info">
                    <a href="/supplier/open_deals"> Open Deals </a>
                </button>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-12 text-center" style="margin-bottom: 15px">
                <button class="btn btn-block btn-info">
                    <a href="/supplier/my_deals"> My Deals </a>
                </button>
            </div>
        </div>
    </div>
</section>

<section id="one" class="wrapper style2" style="padding-top: 2rem;padding-bottom: 0rem;">
    <div class="inner">
        <div class="product_summary text-center">
            <h2> Products/Services Summary Info </h2>
            <table id="product_table" class="table-hover">
                <thead>
                <tr>
                    <th> No</th>
                    <th> Name</th>
                    <th> Description</th>
                </tr>
                </thead>
                <tbody>
                <% for (var i=0; i<products.length;i++) {%>
                    <tr>
                        <td><%= i+1 %></td>
                        <td><%= products[i].productServiceName %></td>
                        <td><%= products[i].productServiceDescription %></td>
                    </tr>
                <% }%>
                </tbody>
            </table>
        </div>
    </div>
</section>


<!-- Two -->

<section class="wrapper">
    <div class="inner">
        <div class="text-center">
            <button class="btn btn-lg btn-success"><a href="/supplier/products_services/add"> New Product/Service </a>
            </button>
        </div>
    </div>
</section>


<!-- Footer -->
<footer id="footer">
    <div class="container">
        <ul class="icons">
            <li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
            <li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
            <li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
            <li><a href="#" class="icon fa-envelope-o"><span class="label">Email</span></a></li>
        </ul>
    </div>
    <div class="copyright">
        &copy; Untitled. All rights reserved.
    </div>
</footer>

<!-- Scripts -->
<script src="/assets/js/jquery.min.js"></script>
<script src="/assets/js/jquery.scrollex.min.js"></script>
<script src="/assets/js/skel.min.js"></script>
<script src="/assets/js/util.js"></script>
<script src="/assets/js/main.js"></script>
<script src="/assets/plugins/toastr/toastr.min.js"></script>
