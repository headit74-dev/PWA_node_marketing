<!-- One -->
<div class="container-fluid"
     style="background-image: url('/images/slide04.jpg');background-repeat: no-repeat;background-size: cover;">
    <form action="/buyer/corporate" method="post" id="form_buyer_corporate" style="width: 90%;margin-left: 5%">
        <section class="wrapper">
            <div class="inner">
                <div>
                    <ul class="nav nav-pills">
                        <li class="nav-item">
                            <a class="nav-link active" href="/buyer">Corporate Info</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/buyer/purchase_orders">Purchase Orders</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>

        <section id="one" class="wrapper style2" style="padding-top: 2rem;padding-bottom: 0rem;">
            <div class="inner">
                <div class="grid-style">
                    <div>
                        <div class="box">
                            <div class="content">
                                <header class="align-center">
                                    <h2>Buyer Information</h2>
                                </header>
                                <div class="form-group text-left">
                                    <label>First Name:</label>
                                    <input class="form-control" type="text" name="firstName" id="firstName" required>
                                </div>
                                <div class="form-group text-left">
                                    <label>Last Name:</label>
                                    <input class="form-control" type="text" name="lastName" id="lastName" required>
                                </div>
                                <div class="form-group text-left">
                                    <label>Legal Address:</label>
                                    <input class="form-control" type="text" name="legalAddress" id="legalAddress" required>
                                </div>
                                <div class="form-group text-left">
                                    <label>Mailing Address:</label>
                                    <input class="form-control" type="text" name="mailingAddress" id="mailingAddress" required>
                                </div>
                                <div class="form-group text-left">
                                    <label>Phone:</label>
                                    <input class="form-control" type="number" name="phone" id="phone" required>
                                </div>
                                <div class="form-group text-left">
                                    <label>Position:</label>
                                    <input class="form-control" type="text" name="position" id="position" required>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div>
                        <div class="box">
                            <div class="content">
                                <header class="align-center">
                                    <h2>Company Information</h2>
                                </header>
                                <div class="form-group text-left">
                                    <label>Company Name:</label>
                                    <input class="form-control" type="text" name="companyName" id="companyName" required>
                                </div>
                                <div class="form-group text-left">
                                    <label>Business Address:</label>
                                    <input class="form-control" type="text" name="businessAddress" id="businessAddress" required>
                                </div>
                                <div class="form-group text-left">
                                    <label>Tax ID:</label>
                                    <input class="form-control" type="text" name="companyTaxId" id="companyTaxId" required>
                                </div>
                                <div class="form-group text-left">
                                    <label>Phone:</label>
                                    <input class="form-control" type="number" name="companyPhone" id="companyPhone" required>
                                </div>
                                <div class="form-group text-left">
                                    <label>Company Website:</label>
                                    <input class="form-control" type="text" name="description" id="description" required>
                                </div>
                                <div class="form-group text-left">
                                    <label>Account Contact name:</label>
                                    <input class="form-control" type="text" name="accountContactName" id="accountContactName" required>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="wrapper">
            <div class="inner">
                <div class="row">
                    <div class="col-6 align-right">
                        <button class="btn btn-lg btn-success" type="button"><a href="#"> Cancel </a></button>
                    </div>
                    <div class="col-6 align-left">
                        <button class="btn btn-lg btn-success" type="submit" id="btn_submit"> Submit</button>
                    </div>
                </div>
            </div>
        </section>
    </form>
</div>


