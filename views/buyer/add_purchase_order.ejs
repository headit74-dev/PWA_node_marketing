        <section id="one" class="wrapper style2" style="padding-top: 2rem;padding-bottom: 0rem;">
            <div class="inner">
                <div class="grid-style box">
                    <header class="text-center" style="width: 100%; margin: 15px">
                        <h2>New Purchase Order</h2>
                    </header>
                    <div class="row" style="width: 100%;margin-bottom: 25px">
                        <div class="col-md-6 col-sm-12 col-12">
                            <div class="form-group text-left">
                                <label>Payment Terms:</label>
                                <input class="form-control" type="text" name="paymentTerms" required>
                            </div>
                            <div class="form-group text-left">
                                <label>Incoterm:</label>
                                <input class="form-control" type="text" name="incoterm" required>
                            </div>
                            <div class="form-group text-left">
                                <label>Required Delivery Date:</label>
                                <input class="form-control" type="text" name="requiredDeliveryDate" required>
                            </div>
                            <div class="form-group text-left">
                                <label>Delivery Address:</label>
                                <input class="form-control" type="text" name="deliveryAddress" required>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 col-12">
                            <div class="form-group text-left">
                                <label>Item Description:</label>
                                <input class="form-control" type="text" name="itemDescription" required>
                            </div>
                            <div class="form-group text-left">
                                <label>Quantity:</label>
                                <input class="form-control" type="text" name="quantity" required>
                            </div>
                            <div class="form-group text-left">
                                <label>Measurement:</label>
                                <input class="form-control" type="text" name="measurement" required>
                            </div>
                            <div class="form-group text-left">
                                <label>Prepared to Pay per Unit:</label>
                                <input class="form-control" type="text" name="prepared" required>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


