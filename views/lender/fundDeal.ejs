<!DOCTYPE HTML>
<html>
<head>
    <title>Borrower Buyer</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="stylesheet" href="/assets/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/main.css"/>
    <link rel="stylesheet" href="/assets/plugins/toastr/toastr.min.css">
    <style>
        .description_div {
            background-color: white;
            border-radius: 10px;
            height: 120px;
            overflow-y: scroll;
            width: 98%;
            padding: 10px 15px;
            margin: 15px 5px;
        }

        .btn-secondary {
            background-color: #e3741b;
        }

        .chart {
            background-color: white;
            width: 98%;
            height: 180px;
        }

        .btn-group-vertical button {
            font-size: 0.75rem;
        }
    </style>
</head>
<body style="background-color: #f2f2f2">

<!-- Header -->
<header id="header" class="alt">
    <div class="logo"><a href="/lender"><span>Lender</span></a></div>
    <a href="#menu" id="menu_link"><span id="span_menu">Menu</span></a>
</header>

<!-- Nav -->
<nav id="menu">
    <ul class="links">
        <li><a href="#"> My Deals </a></li>
        <li><a href="#"> Alerts </a></li>
        <li><a href="#"> Messages </a></li>
        <li><a href="#"> Account </a></li>
        <li><a href="#"> Help </a></li>
    </ul>
</nav>

<!-- Banner -->
<section class="banner" style="min-height: 50px;height: 50px;padding: 3.2em 0;">
    <article id="article">
        <img src="/images/slide01.jpg" alt=""/>
        <div class="inner">
            <header>
                <p>A free responsive web site template by <a href="https://templated.co">TEMPLATED</a></p>
                <h2>Hielo</h2>
            </header>
        </div>
    </article>
</section>

<div id="borrower_title">
    Open Deals
</div>
<!-- One -->
<section class="wrapper" style="background-color: #f2f2f2">
    <div class="inner">
        <div class="row">
            <div class="col-6 text-center" style="margin-bottom: 15px">
                <button class="btn btn-lg btn-info active">
                    <a href="/lender"> Open Deals </a>
                </button>
            </div>
            <div class="col-6 text-center" style="margin-bottom: 15px">
                <button class="btn btn-lg btn-info">
                    <a href="/lender/my_deal"> My Deals </a>
                </button>
            </div>
        </div>
    </div>
</section>

<section id="one" class="wrapper style2" style="padding-top: 2rem;padding-bottom: 0rem;">
    <div class="inner">
        <div class="grid-style">
            <% for (var i = 0; i < deals.length; i++) { %>
                <div class="deal_display" data-id="<%= deals[i].id%>"
                     style="background-color: #9ec6ff;width: 100%;margin-bottom: 25px;border-radius: 20px;border: 5px solid lightskyblue">
                    <div class="row" style="margin-right: -15px;margin-left: -15px">
                        <div class="col-md-6 col-sm-12">
                            <div class="row">
                                <div class="col-sm-6 col-12" style="padding-left: 25px;padding-top: 10px">
                                    <h5>DealID: <%= deals[i].id %></h5>
                                    <h5>Deal headline: <%= deals[i].fullLegalName %></h5>
                                </div>
                                <div class="col-sm-6 col-12" style="padding-left: 20px">
                                    <h5>Deal Type: <%= deals[i].entityType %></h5>
                                    <button class="btn btn-lg btn-secondary">Participate</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-12 ">
                            <div class="description_div">
                                <p>Description</p>
                            </div>
                            <div class="row text-left" style="padding-left: 10px">
                                <div class="col-sm-3 col-6" style="margin-bottom: 15px">
                                    <button class="btn btn-info btn_display">Deadline</button>
                                </div>
                                <div class="col-sm-3 col-6" style="margin-bottom: 15px">
                                    <button class="btn btn-info btn_display">Timeline</button>
                                </div>
                                <div class="col-sm-3 col-6" style="margin-bottom: 15px">
                                    <button class="btn btn-info btn_display">Return(%)</button>
                                </div>
                                <div class="col-sm-3 col-6" style="margin-bottom: 15px">
                                    <button class="btn btn-info btn_display">RODA.%</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="row">
                                <div class="col-sm-5 col-12">
                                    <div class="btn-group-vertical" style="width: 100%;">
                                        <button type="button" class="btn btn-info btn-block" style="margin-bottom:10px">
                                            Total Deal Amount
                                        </button>
                                        <button type="button" class="btn btn-info btn-block" style="margin-bottom:10px">
                                            Contribution
                                        </button>
                                        <button type="button" class="btn btn-info btn-block" style="margin-bottom:10px">
                                            Crowdlending
                                        </button>
                                        <button type="button" class="btn btn-info btn-block" style="margin-bottom:10px">
                                            DLS Club
                                        </button>
                                    </div>
                                </div>
                                <div class="col-sm-7 col-12 text-center">
                                    <div class="chart">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>


<!-- Two -->
<section id="two" class="wrapper style2" style="padding-top: 0rem;">
    <div class="inner">
        <div class="align-left">
            <!--<a href="#" class="button alt">Learn More</a>-->
            <header>
                <h2 style="padding-left: 30px">Account Balance: </h2>
            </header>
            <div class="row">
                <form action="/lender/fund" method="post" id="form_fund">
                    <input type="hidden" name="dealId" placeholder="Account Balance:" id="dealIdFund">
                    <div class="form-group" style="display: flex;padding-left: 30px">
                        <label for="fundAmount">Amount to Fund:</label>
                        <input type="number" name="fundAmount" placeholder=" Amount to Fund:" id="fundAmount" class="form-control">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<section class="wrapper" style="margin-top: -50px">
    <div class="inner">
        <div class="row">
            <div class="col-6 align-right">
                <button class="btn btn-lg btn-success"><a href="/lender"> Cancel </a></button>
            </div>
            <div class="col-6 align-left">
                <button class="btn btn-lg btn-success" id="btn_fund"> Submit </button>
            </div>
        </div>
    </div>
</section>


<!-- Footer -->
<footer id="footer">
    <div class="container">
        <ul class="icons">
            <li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
            <li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
            <li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
            <li><a href="#" class="icon fa-envelope-o"><span class="label">Email</span></a></li>
        </ul>
    </div>
    <div class="copyright">
        &copy; Untitled. All rights reserved.
    </div>
</footer>

<!-- Scripts -->
<script src="/assets/js/jquery.min.js"></script>
<script src="/assets/js/jquery.scrollex.min.js"></script>
<script src="/assets/js/skel.min.js"></script>
<script src="/assets/js/util.js"></script>
<script src="/assets/js/main.js"></script>
<script src="/assets/plugins/toastr/toastr.min.js"></script>
<!--<script src="./js/toast.js"></script>-->
<!--<script src="./js/main.js"></script>-->
<!--<script src="./js/offline.js"></script>-->
<!--<script src="./js/app.js"></script>-->
<!--<script src="./js/push.js"></script>-->
<!--<script src="./js/sync.js"></script>-->
<!--<script src="./js/share.js"></script>-->
<!--<script src="./js/menu.js"></script>-->
<script>
    $(document).ready(function () {
        toastr.success('You are logged in as a lender.');
        $('#article').hide();
        $('.deal_display').click(function () {
            $(this).css('opacity', '0.6');
            var dealId = $(this).attr('data-id');
            window.location.href='/lender/openDeals/details/?id=' + dealId;
        });
        $('#btn_fund').click(function () {
            var dealId = '<%= deals[0].id %>';
            $('#dealIdFund').val(dealId);
            $('#form_fund').submit();
        })
    })
</script>
</body>
</html>
