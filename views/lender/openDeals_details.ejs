<div id="borrower_title">
    Open Deals
</div>
<!-- One -->
<section class="wrapper">
    <div class="inner">
        <div class="row">
            <div class="col-6 text-center" style="margin-bottom: 15px">
                <button class="btn btn-lg btn-success active">
                    <a href="/lender"> Open Deals </a>
                </button>
            </div>
